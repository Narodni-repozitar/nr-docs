{%- extends "invenio_theme/frontpage.html" %}

{# TODO (UI): prepare a proper initial title page !!! #}

{%- block page_header %}
  {% include "header_frontpage.html" %}
{%- endblock page_header %}

{%- block page_body %}

    {%- block intro_section %}
    {%- endblock intro_section %}

    {%- block bypasslinks %}
    {%- endblock bypasslinks %}

    {%- block top_banner %}
    {%- endblock top_banner %}

    {%- block grid_section %}
        <div class="backdrop">
            <div class="backdrop-filter">
                <div class="content-container">
                {% block main_column %}
                    {% block main_column_content %}
                        {%- block frontpage_search %}
                                {%- block frontpage_title %}
                                    <div class="ui text container centered">
                                        <div class="flex align-items-center justify-center rel-mb-3">
                                            {%- if config.THEME_FRONTPAGE_LOGO %}
                                                <img class="ui medium image"
                                                    src="{{ url_for('static', filename=config.THEME_LOGO.replace('<language>', current_i18n.language)) }}"
                                                    alt="{{ _(config.THEME_SITENAME) }}"/>
                                            {%- else %}
                                                <h1>{{ _(config.THEME_SITENAME) }}</h1>
                                            {%- endif %}
                                        </div>
                                        <div class="ui label purple">
                                            <h2 class="ui header frontpage subtitle medium">{{ _(config.THEME_FRONTPAGE_TITLE) }}</h2>
                                        </div>
                                    </div>
                                {%- endblock frontpage_title %}
                                {%- block frontpage_form %}
                                    <div class="row rel-mt-5">
                                        <div class="sixteen wide mobile eight wide computer column center aligned">
                                            <form action="{{ url_for('documents.search') }}" class="ui form" role="search">
                                                <div class="ui fluid action input search-bar">
                                                    <input type="text" name="q" class="form-control" autofocus
                                                        placeholder="{{ _('Search') }}">
                                                    <button type="submit" class="ui icon search button"
                                                            aria-label="{{ _('Search') }}"><i class="search icon"></i>
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="ui divider hidden"></div>
                                {%- endblock frontpage_form %}
                        {%- endblock frontpage_search %}
                    {% endblock main_column_content %}

                {% endblock main_column %}
                </div>
            </div>
        </div>
    {%- endblock grid_section %}

{%- block bottom_section %}
{%- endblock bottom_section %}

{%- endblock page_body %}


